import os

filename = "python program.txt"

def write_to_file():
    with open(filename, "w") as f:
        f.write("Learning Python Programming at Besant Technology")
    print("Message written to file")

def append_to_file():

    message = input("Enter your message: ")
    with open(filename, "a") as f:
        f.write("\n" + message)
    print("Message appended to file.")

def check_file_exists():
    if os.path.exists(filename):
        print("File exists.")
    else:
        print("File does not exist.")

def read_from_file():
    if os.path.exists(filename):
        with open(filename, "r") as f:
            content = f.read()
        print("Message read from file:")
        print(content)
    else:
        print("File not found. Please write to the file first.")

def main():
    print("Enter 1 to write message to file")
    print("Enter 2 to check if file exists")
    print("Enter 3 to read from file")
    print("Enter 4 to append message to file")

    choice = input("Enter your choice (1, 2, 3, or 4): ")

    if choice == '1':
        write_to_file()
    elif choice == '2':
        check_file_exists()
    elif choice == '3':
        read_from_file()
    elif choice == '4':
        append_to_file()
    else:
        print("Invalid choice. Please enter 1, 2, 3, or 4.")

# Call the main function
main()

